{{! Comments }}
<div class="card" style="margin: 25px 130px 25px 130px;">
    {{! 댓글 개수 }}
    <div class="card-header bi bi-chat-dots"> {{#comments.size}}{{comments.size}}{{/comments.size}} Comments</div>

    {{! 댓글리스트 }}
    <ul class="list-group-item" style="margin: 5px 10px 5px 10px;">
        {{#comments}}
            <li id="comments-{{id}}" class="list-group-item">
                <div class="card" style="margin: 30px 10px 30px 10px;">
                    <div class="card-header bi bi-char-dots">
                        <span style="font-size: small">{{name}}</span>
                        <span style="font-size: xx-small">{{createdDate}}</span>
                        {{#isAuthor}}
                            <a class="bi bi-pencil-square" type="button" data-toggle="collapse"
                               data-target=".multi-collapse-{{id}}"></a> {{! 댓글 수정 버튼 }}
                            <a type="button" onclick="main.commentDelete({{id}})"
                               class="bi bi-x-square"></a> {{! 댓글 삭제 버튼 }}
                        {{/isAuthor}}
                    </div>
                    {{! 댓글 내용 }}
                    <pre class="collapse multi-collapse-{{id}} show"
                         style="margin: 7px 15px 7px 15px;">{{comment}}</pre>
                </div>

                {{! 댓글 수정 }}
                <form class="collapse multi-collapse-{{id}}">
                    <input type="hidden" id="id" value="{{id}}">
                    <div class="form-group">
                        <textarea class="form-control" id="comment-content" rows="3">{{comment}}</textarea>
                    </div>
                    <button type="button" id="btn-comment-update" class="btn btn-outline-primary bi bi-pencil-square">
                        수정
                    </button>
                </form>
            </li>
        {{/comments}}
    </ul>
</div>
<br/>